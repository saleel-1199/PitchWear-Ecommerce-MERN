<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Address Book | Vestra</title>

  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white">

  <!-- Top Navbar (same layout like UI) -->
  <header class="bg-[#F6F6D8] px-10 py-4 flex items-center justify-between">
    <h1 class="font-bold text-lg">VESTRA</h1>

    <nav class="flex gap-8 text-sm">
      <a href="/home">Home</a>
      <a href="/shop">Shop</a>
      <a href="/about">About</a>
      <a href="/contact">Contact</a>
    </nav>

    <div class="flex gap-4">
      <span>üîç</span>
      <span>üõí</span>
      <span>üë§</span>
    </div>
  </header>

  <div class="max-w-6xl mx-auto px-10 py-10 flex gap-10">

    <!-- Left sidebar -->
    <aside class="w-64">
      <div class="mb-4">
        <p class="text-sm text-gray-500">My Account</p>
        <p class="font-semibold"><%= user.full_name || "User" %></p>
      </div>

      <ul class="space-y-3 text-sm">
        <li><a href="/orders">My Orders</a></li>
        <li class="font-semibold bg-gray-100 p-2 rounded">Address Book</li>
        <li><a href="/wallet">Wallet</a></li>
      </ul>

      <div class="mt-10 text-sm space-y-3">
        <a href="/about">About Us</a><br>
        <a href="/contact">Contact Us</a><br>
        <a href="/logout" class="text-red-500">Logout</a>
      </div>
    </aside>

    <!-- Main content -->
    <main class="flex-1">
      <h2 class="text-3xl font-bold mb-8">Address Book</h2>

      <!-- CONDITION: if no addresses show only Add button -->
      <% if (addresses.length === 0) { %>
        <div class="mt-10">
          <a href="/address/new"
             class="bg-green-600 text-white px-6 py-3 rounded-md inline-block">
             Add New Address
          </a>
        </div>

      <% } else { %>

        <% addresses.forEach(address => { %>
          <div class="relative bg-gray-100 rounded-xl overflow-hidden mb-8">
            <div class="p-6">
              <p class="font-semibold"><%= address.full_name %></p>
              <p class="text-sm text-gray-700"><%= address.phone_no %></p>
              <p class="text-sm text-gray-700">
                <%= address.address_line1 %>, <%= address.city %>, <%= address.state %> <%= address.pin_code %>
              </p>
              <p class="text-sm text-gray-500"><%= address.type %></p>
            </div>

            <% if (address.is_default) { %>
              <span class="absolute top-5 right-5 bg-pink-400 text-white text-xs px-4 py-2 rounded-full">
                Default
              </span>
            <% } %>

            <div class="p-6 flex gap-4">
              <a href="/address/edit/<%= address._id %>"
                 class="bg-yellow-400 px-6 py-2 rounded-md text-sm">
                Edit
              </a>

              <button onclick="openDeleteModal('<%= address._id %>')"
                      class="bg-red-500 text-white px-6 py-2 rounded-md text-sm">
                Delete
              </button>
            </div>
          </div>
        <% }) %>

        <a href="/address/new"
           class="bg-green-600 text-white px-6 py-3 rounded-md inline-block">
          Add New Address
        </a>

      <% } %>
    </main>
  </div>

  <!-- Delete Modal -->
  <div id="deleteModal"
       class="hidden fixed inset-0 bg-black/40 flex items-center justify-center">
    <div class="bg-white w-[450px] rounded-xl p-8 text-center">
      <h2 class="font-bold text-lg">Confirm Deletion</h2>
      <p class="text-sm text-gray-500 mt-2">
        Are you sure you want to delete this address?
      </p>

      <div class="flex justify-center gap-4 mt-6">
        <a id="confirmDeleteBtn"
           class="bg-pink-600 text-white px-6 py-2 rounded-md text-sm">
          Yes, Delete
        </a>
        <button onclick="closeDeleteModal()"
                class="bg-gray-200 px-6 py-2 rounded-md text-sm">
          Cancel
        </button>
      </div>
    </div>
  </div>

  <script>
    function openDeleteModal(id) {
      document.getElementById("deleteModal").classList.remove("hidden");
      document.getElementById("confirmDeleteBtn").href = "/address/delete/" + id;
    }

    function closeDeleteModal() {
      document.getElementById("deleteModal").classList.add("hidden");
    }
  </script>

</body>
</html>
