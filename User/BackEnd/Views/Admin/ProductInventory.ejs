<!DOCTYPE html>
<html>
<head>
  <title>Add Inventory</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-[#f8f8f4] px-10 py-10">

<h2 class="text-2xl font-bold mb-6">
  Add Stock â€“ <%= product.team %> <%= product.type %>
</h2>

<form method="POST" class="bg-white p-6 rounded-xl w-[600px] space-y-6">

  <% const sizes = ["S","M","L","XL","XXL"]; %>

  <% sizes.forEach((size, index) => { %>
    <div class="border rounded-lg p-4">
      <h4 class="font-semibold mb-3">Size <%= size %></h4>

      <!-- SIZE (hidden) -->
      <input type="hidden" name="variants[<%= index %>][size]" value="<%= size %>">

      <!-- PRICE -->
      <div class="mb-3">
        <label class="text-sm font-medium">Price</label>
        <input
          type="number"
          name="variants[<%= index %>][price]"
          class="w-full border px-3 py-2 rounded"
          placeholder="Enter price"
        />
      </div>

      <!-- STOCK -->
      <div>
        <label class="text-sm font-medium">Stock</label>
        <input
          type="number"
          name="variants[<%= index %>][stock]"
          class="w-full border px-3 py-2 rounded"
          placeholder="Enter stock"
        />
      </div>
    </div>
  <% }) %>

  <div class="flex justify-end gap-3 pt-4">
    <a href="/admin/products"
       class="px-5 py-2 border rounded">Cancel</a>

    <button class="px-5 py-2 bg-green-700 text-white rounded">
      Save Inventory
    </button>
  </div>

</form>

</body>
</html>
