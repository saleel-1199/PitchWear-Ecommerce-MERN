<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= title || "User Management" %></title>

  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: "#cfd574",
            headerTone: "#f5f6df",
            bgLight: "#faf9f6"
          }
        }
      }
    }
  </script>
</head>

<body class="bg-bgLight text-gray-800">

  <!-- HEADER -->
  <header class="bg-headerTone px-10 py-4 flex justify-between items-center">
    <div class="flex items-center gap-8">
      <h1 class="font-semibold text-lg">PitchWear</h1>
      <p class="text-sm font-medium">Admin Dashboard</p>
    </div>

    <div class="w-10 h-10 rounded-full bg-white flex items-center justify-center border">
      <span class="text-gray-700 font-semibold">A</span>
    </div>
  </header>

  <main class="flex gap-10 px-10 py-10">

    <!-- SIDEBAR -->
    <aside class="w-64">
      <p class="text-sm text-gray-500 mb-6">LookIt Admin</p>

      <nav class="space-y-2 text-sm">

        <a href="/admin/dashboard"
          class="flex items-center gap-2 px-4 py-2 rounded-lg hover:bg-white">
          Dashboard
        </a>

        <a href="/admin/products"
          class="flex items-center gap-2 px-4 py-2 rounded-lg hover:bg-white">
          Product Management
        </a>

        <a href="/admin/orders"
          class="flex items-center gap-2 px-4 py-2 rounded-lg hover:bg-white">
          Order Management
        </a>

        <a href="/admin/users"
          class="flex items-center gap-2 px-4 py-2 rounded-lg bg-white font-medium">
          User Management
        </a>

        <a href="/admin/analytics"
          class="flex items-center gap-2 px-4 py-2 rounded-lg hover:bg-white">
          Analytics
        </a>

        <a href="/admin/logout" class="text-red-500 font-medium block mt-10 px-4">
          Logout
        </a>

      </nav>
    </aside>

    <!-- CONTENT -->
    <section class="flex-1">

      <h2 class="text-3xl font-semibold mb-10 text-center">User Management</h2>

      <!-- ‚úÖ Search only (no apply/reset buttons) -->
      <form action="/admin/users" method="GET" class="mb-10">
        <div class="bg-white rounded-xl border px-6 py-4 flex items-center gap-3">

          <span class="text-gray-400 text-lg">üîç</span>

          <input
            type="text"
            name="search"
            value="<%= search || '' %>"
            placeholder="Search by Name, Email, or Phone"
            class="flex-1 outline-none text-sm"
          />

          <% if (search && search.trim() !== "") { %>
            <!-- ‚úÖ Clear search -->
            <a
              href="/admin/users"
              class="text-gray-400 hover:text-gray-700 text-lg font-semibold"
              title="Clear"
            >
              ‚úï
            </a>
          <% } %>

        </div>
      </form>

      <!-- Table -->
      <div class="bg-white rounded-xl border overflow-hidden">
        <table class="w-full text-sm">
          <thead class="bg-gray-50 text-gray-500">
            <tr>
              <th class="text-left px-5 py-4">Profile</th>
              <th class="text-left px-5 py-4">Full Name</th>
              <th class="text-left px-5 py-4">Email</th>
              <th class="text-left px-5 py-4">Phone</th>
              <th class="text-left px-5 py-4">Joined Date</th>
              <th class="text-left px-5 py-4">Status</th>
              <th class="text-center px-5 py-4">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% if (!users || users.length === 0) { %>
              <tr>
                <td colspan="7" class="text-center py-14 text-gray-400">
                  No users found
                </td>
              </tr>
            <% } else { %>

              <% users.forEach((u) => { %>
                <tr class="border-t">

                  <!-- Profile -->
                  <td class="px-5 py-5">
                    <div class="w-12 h-12 rounded-full bg-gray-200 flex items-center justify-center overflow-hidden">
                      <% if (u.profileImage) { %>
                        <img src="<%= u.profileImage %>" class="w-full h-full object-cover" />
                      <% } else { %>
                        <span class="font-semibold text-gray-600 text-lg">
                          <%= (u.fullName && u.fullName[0]) ? u.fullName[0].toUpperCase() : "U" %>
                        </span>
                      <% } %>
                    </div>
                  </td>

                  <td class="px-5 py-5 font-medium"><%= u.fullName || "-" %></td>
                  <td class="px-5 py-5 text-gray-500"><%= u.email || "-" %></td>
                  <td class="px-5 py-5 text-gray-500"><%= u.phone_no || "-" %></td>

                  <td class="px-5 py-5 text-gray-500">
                    <%= u.createdAt ? new Date(u.createdAt).toISOString().slice(0,10) : "-" %>
                  </td>

                  <!-- Status -->
                  <td class="px-5 py-5">
                    <% if (u.isBlocked) { %>
                      <span class="px-4 py-1 rounded-full bg-red-500 text-white text-xs font-medium">
                        Blocked
                      </span>
                    <% } else { %>
                      <span class="px-4 py-1 rounded-full bg-green-500 text-white text-xs font-medium">
                        Active
                      </span>
                    <% } %>
                  </td>

                  <!-- Actions -->
                  <td class="px-5 py-5 text-center">
                    <% const actionText = u.isBlocked ? "Unblock" : "Block"; %>

                    <!-- ‚úÖ Confirmation page route -->
                    <a
                      href="/admin/users/<%= u._id %>/confirm-block"
                      class="text-primary font-semibold hover:underline"
                    >
                      <%= actionText %>
                    </a>
                  </td>

                </tr>
              <% }) %>

            <% } %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if (totalPages && totalPages > 1) { %>
        <div class="flex justify-center items-center gap-3 mt-10 text-sm">

          <!-- Prev -->
          <% if (page > 1) { %>
            <a
              href="/admin/users?page=<%= page - 1 %>&search=<%= encodeURIComponent(search || '') %>"
              class="px-3 py-1 rounded bg-white border hover:bg-gray-50"
            >
              ‚Äπ
            </a>
          <% } else { %>
            <span class="px-3 py-1 rounded bg-gray-100 border text-gray-400">‚Äπ</span>
          <% } %>

          <!-- Numbers -->
          <% for (let p = 1; p <= totalPages; p++) { %>
            <a
              href="/admin/users?page=<%= p %>&search=<%= encodeURIComponent(search || '') %>"
              class="w-9 h-9 flex items-center justify-center rounded-full border
                <%= p === page ? 'bg-gray-200 font-semibold' : 'bg-white hover:bg-gray-50' %>"
            >
              <%= p %>
            </a>
          <% } %>

          <!-- Next -->
          <% if (page < totalPages) { %>
            <a
              href="/admin/users?page=<%= page + 1 %>&search=<%= encodeURIComponent(search || '') %>"
              class="px-3 py-1 rounded bg-white border hover:bg-gray-50"
            >
              ‚Ä∫
            </a>
          <% } else { %>
            <span class="px-3 py-1 rounded bg-gray-100 border text-gray-400">‚Ä∫</span>
          <% } %>

        </div>
      <% } %>

    </section>

  </main>

</body>
</html>
