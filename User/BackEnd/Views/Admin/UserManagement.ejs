<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title || "User Management" %></title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-[#f8f8f4] text-gray-800">

  <!-- Top bar -->
  <header class="bg-[#eff2c8] px-10 py-5 flex items-center justify-between">
    <div class="flex items-center gap-10">
      <h1 class="font-bold text-lg">Pitchwear</h1>
      <p class="text-sm font-semibold">Admin Dashboard</p>
    </div>
    <div class="w-11 h-11 rounded-xl bg-white flex items-center justify-center border">
      <span class="text-lg">ğŸ‘¤</span>
    </div>
  </header>

  <main class="flex px-10 py-10 gap-10">

    <!-- Sidebar -->
    <aside class="w-64">
      <p class="text-sm text-gray-500 mb-5">LookIt Admin</p>

      <nav class="space-y-2 text-sm">
        <a href="/admin/dashboard" class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-white">
          ğŸ  Dashboard
        </a>

        <a href="/admin/products" class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-white">
          ğŸ‘• Product Management
        </a>

        <a href="/admin/orders" class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-white">
          ğŸ“¦ Order Management
        </a>

        <a href="/admin/users" class="flex items-center gap-3 px-4 py-2 rounded-lg bg-white font-medium">
          ğŸ‘¥ User Management
        </a>

        <a href="/admin/analytics" class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-white">
          ğŸ“ˆ Analytics
        </a>

        <a href="/admin/coupons" class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-white">
          ğŸ§¾ Coupons
        </a>

        <a href="/admin/banner" class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-white">
          ğŸ·ï¸ Banner
        </a>

        <a href="/admin/offers" class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-white">
          ğŸ Offers
        </a>

        <a href="/admin/settings" class="flex items-center gap-3 px-4 py-2 rounded-lg hover:bg-white">
          âš™ï¸ Settings
        </a>

        <a href="/admin/logout" class="flex items-center gap-3 px-4 py-2 rounded-lg text-red-600 font-medium mt-6">
          â›” Logout
        </a>
      </nav>
    </aside>

    <!-- Content -->
    <section class="flex-1">

      <div class="flex justify-between items-center">
        <h2 class="text-3xl font-bold">User Management</h2>
      </div>

      <!-- âœ… Search Bar (debounced) -->
      <form action="/admin/users" method="GET" class="mt-8" onsubmit="return false;">
        <div class="bg-white rounded-xl border px-6 py-3 flex items-center gap-3">
          <span class="text-gray-400">ğŸ”</span>

          <input
            type="text"
            id="searchInput"
            name="search"
            value="<%= search || '' %>"
            placeholder="Search by Name, Email, or Phone"
            class="w-full outline-none text-sm"
            autofocus
          />

          <% if (search && search.trim() !== "") { %>
            <a href="/admin/users" class="text-gray-400 font-bold">âœ•</a>
          <% } %>
        </div>
      </form>

      <!-- Table -->
      <div class="bg-white rounded-xl border overflow-hidden mt-8">
        <table class="w-full text-sm">
          <thead class="bg-gray-50 text-gray-500">
            <tr>
              <th class="text-left px-6 py-4">Profile</th>
              <th class="text-left px-6 py-4">Full Name</th>
              <th class="text-left px-6 py-4">Email</th>
              <th class="text-left px-6 py-4">Phone</th>
              <th class="text-left px-6 py-4">Joined Date</th>
              <th class="text-left px-6 py-4">Status</th>
              <th class="text-center px-6 py-4">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% if (!users || users.length === 0) { %>
              <tr>
                <td colspan="7" class="text-center py-16 text-gray-400">
                  No users found
                </td>
              </tr>
            <% } else { %>

              <% users.forEach((u) => { %>
                <tr class="border-t">

                  <td class="px-6 py-5">
                    <div class="w-12 h-12 rounded-full bg-gray-200 flex items-center justify-center overflow-hidden">
                      <% if (u.profileImage) { %>
                        <img src="<%= u.profileImage %>" class="w-full h-full object-cover" />
                      <% } else { %>
                        <span class="font-semibold text-gray-600 text-lg">
                          <%= (u.fullName && u.fullName[0]) ? u.fullName[0].toUpperCase() : "U" %>
                        </span>
                      <% } %>
                    </div>
                  </td>

                  <td class="px-6 py-5 font-medium"><%= u.fullName || "-" %></td>
                  <td class="px-6 py-5 text-gray-500"><%= u.email || "-" %></td>
                  <td class="px-6 py-5 text-gray-500"><%= u.phone_no || "-" %></td>

                  <td class="px-6 py-5 text-gray-500">
                    <%= u.createdAt ? new Date(u.createdAt).toISOString().slice(0,10) : "-" %>
                  </td>

                  <td class="px-6 py-5">
                    <% if (u.isBlocked) { %>
                      <span class="bg-red-500 text-white px-5 py-1.5 rounded-lg text-xs font-semibold">
                        Blocked
                      </span>
                    <% } else { %>
                      <span class="bg-green-600 text-white px-5 py-1.5 rounded-lg text-xs font-semibold">
                        Active
                      </span>
                    <% } %>
                  </td>

                  <td class="px-6 py-5 text-center">
                    <% const actionText = u.isBlocked ? "Unblock" : "Block"; %>

                    <a
                      href="/admin/users/<%= u._id %>/confirm-block"
                      class="bg-[#cdd47b] text-white px-10 py-2 rounded-lg text-xs font-semibold"
                    >
                      <%= actionText %>
                    </a>
                  </td>

                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if (totalPages && totalPages > 1) { %>
        <div class="flex justify-center items-center gap-3 mt-10 text-sm">

          <% if (page > 1) { %>
            <a
              href="/admin/users?page=<%= page - 1 %>&search=<%= encodeURIComponent(search || '') %>"
              class="px-3 py-1 rounded bg-white border hover:bg-gray-50"
            >
              â€¹
            </a>
          <% } else { %>
            <span class="px-3 py-1 rounded bg-gray-100 border text-gray-400">â€¹</span>
          <% } %>

          <% for (let p = 1; p <= totalPages; p++) { %>
            <a
              href="/admin/users?page=<%= p %>&search=<%= encodeURIComponent(search || '') %>"
              class="w-9 h-9 flex items-center justify-center rounded-full border
                <%= p === page ? 'bg-gray-200 font-semibold' : 'bg-white hover:bg-gray-50' %>"
            >
              <%= p %>
            </a>
          <% } %>

          <% if (page < totalPages) { %>
            <a
              href="/admin/users?page=<%= page + 1 %>&search=<%= encodeURIComponent(search || '') %>"
              class="px-3 py-1 rounded bg-white border hover:bg-gray-50"
            >
              â€º
            </a>
          <% } else { %>
            <span class="px-3 py-1 rounded bg-gray-100 border text-gray-400">â€º</span>
          <% } %>

        </div>
      <% } %>

    </section>

  </main>

  <!-- âœ… keep your Debounce Script as it is -->
  <script>
    function debounce(fn, delay = 500) {
      let timer;
      return (...args) => {
        clearTimeout(timer);
        timer = setTimeout(() => fn(...args), delay);
      };
    }

    const searchInput = document.getElementById("searchInput");

    if (searchInput) {
      searchInput.focus();
      const val = searchInput.value;
      searchInput.value = "";
      searchInput.value = val;
    }

    const debouncedSearch = debounce((value) => {
      const url = new URL(window.location.href);

      if (value.trim() === "") {
        url.searchParams.delete("search");
      } else {
        url.searchParams.set("search", value.trim());
      }

      url.searchParams.set("page", 1);

      window.location.href = url.toString();
    }, 500);

    searchInput.addEventListener("input", (e) => {
      debouncedSearch(e.target.value);
    });
  </script>

</body>
</html>
